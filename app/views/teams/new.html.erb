<div class="container">
  <%= simple_form_for @form, url: teams_path do |f| %>
    <h3>Team</h3>

    <%= f.error_notification message: f.object.errors[:player].to_sentence if f.object.errors[:player].present? %>

    <div>
      <%= f.input :name %>
      <%= f.input :coach %>
      <%= f.input :nationality %>
    </div>

    <div>
      <h4>Player 1</h4>
      <%= f.simple_fields_for :players, Player.new do |p| %>
        <%= p.input :first_name %>
        <%= p.input :last_name %>
        <%= p.input :nationality %>
      <% end %>

      <h4>Player 2</h4>
      <%= f.simple_fields_for :players, Player.new do |p| %>
        <%= p.input :first_name %>
        <%= p.input :last_name %>
        <%= p.input :nationality %>
      <% end %>
    </div>


    <%= f.submit :Submit %>
  <% end %>
</div>
