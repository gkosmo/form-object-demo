<div class="container py-5">
  <%= simple_form_for @form do |f| %>
    <h3>Team</h3>

    <div>
      <%= f.input :name %>
      <%= f.input :coach %>
      <%= f.input :nationality %>
    </div>

    <hr class="my-5">

    <div>
      <h4>Player 1</h4>
      <%= f.simple_fields_for :players do |p| %>
        <%= p.input :first_name %>
        <%= p.input :last_name %>
        <%= p.input :nationality %>
      <% end %>

      <h4>Player 2</h4>
      <%= f.simple_fields_for :players do |p| %>
        <%= p.input :first_name %>
        <%= p.input :last_name %>
        <%= p.input :nationality %>
      <% end %>
    </div>


    <%= f.submit "Create my team", class: "btn btn-primary" %>
  <% end %>
</div>
